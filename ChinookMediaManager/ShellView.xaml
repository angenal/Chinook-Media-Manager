<Window x:Class="ChinookMediaManager.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:p="http://www.codeplex.com/prism"
             MinHeight="300" MinWidth="600">

	<DockPanel LastChildFill="True">

		<ToolBar DockPanel.Dock="Top">
			<Button Command="{Binding ShowAlbumsCommand}" Width="70">
				<StackPanel>
					<Image Source="/Resources/Images/albums.jpg" Width="32" Height="32" />
					<TextBlock Text="Albums"/>
				</StackPanel>
			</Button>
		</ToolBar>
        <ContentControl p:RegionManager.RegionName="ContentRegion" />

    </DockPanel>

</Window>
